<h4 class="area-heading">Pages</h4>
<div class="area-content">
  <div class="list-group">
    {{#each page in controller}}
      {{#linkTo "page" page classNames="list-group-item"}}
        <h4 class="list-group-item-heading">{{page.title}}</h4>
        <p class="list-group-item-text">{{page.statusDisplay}}</p>
      {{/linkTo}}
    {{/each}}
  </div>
</div>
